  <div class="show-action-menu">
      <%= render 'action_menu' %>
  </div>

<img src="<%= @poster%>">

  <div class="show-detail-module show-details">
    <h3>Movie Details</h3>

    <ul>
        <li>Date: <%= @movie.date.to_date().to_s(:long) %></li>
        <li>Genre: <%= @movie.genre %></li>
        <li>Director: <%= @movie.director %></li>
        <li>Duration: <%= @movie.duration %> min.</li>
    </ul>
  
  <h3>Rating Score: <%=@rating%>/100</h3>
  <div class="tomatometer rotten"><span style="width:<%=@rating%>%;"></span></div>
  <center><i class="icon huge certified"></i></center>

  </div>