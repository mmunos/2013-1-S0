<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Rating</th>
      <th>Content</th>
      <th>Reviewable</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user %></td>
        <td><%= review.rating %></td>
        <td><%= review.content %></td>

        <td><%= link_to 'Show', polymorphic_path(@parent.push(review)) %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path(@parent) %></td>
        <td><%= link_to 'Destroy', polymorphic_path(@parent), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Review', new_polymorphic_path(@parent) %>
