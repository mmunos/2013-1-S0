
<% if current_user %>
  <%= form_for(@parent.push(@review)) do |f| %>
    <div class="review-form">
      <div class="review-form-user">
        <%= user_gravatar(current_user,90) %>

        <span class="review-form-username"><%= current_user.username %></span>
      </div>

      <div class="review-form-content">
        <div class="review-form-stars">
          <input type="radio" name="review[rating]" value="5" id="rating_5" required>
          <label for="rating_5">5</label>
          <input type="radio" name="review[rating]" value="4" id="rating_4" required>
          <label for="rating_4">4</label>
          <input type="radio" name="review[rating]" value="3" id="rating_3" required>
          <label for="rating_3">3</label>
          <input type="radio" name="review[rating]" value="2" id="rating_2" required>
          <label for="rating_2">1</label>
          <input type="radio" name="review[rating]" value="1" id="rating_1" required>
          <label for="rating_1">1</label>
        </div>
        
        <%= f.text_area :content, {required: "", placeholder:"Write your review here"} %>
      </div>

      <div class="review-form-submit">
        <%= f.submit %> or <%= link_to 'Cancel', nil, class: "close-review-form" %>
      </div>
    </div>
  <% end %>
<% end %>