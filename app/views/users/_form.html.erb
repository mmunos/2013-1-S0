<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, {required: ""} %>
  </div>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, {required: ""} %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, {type: "email", validate: "", required: ""} %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, {required: ""}%>
  </div>
  
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, {required: ""}%>
  </div>

  <% if user_admin?(current_user) %>
  <h3>Admin Options</h3>
  
  <div class="field">
    <%= f.label :role %>
    <%= select_tag "user[role]", options_for_select(["user","admin"], @user.role) %>
  </div>
  
  <div class="field">
    <%= f.label :score %>
    <%= f.number_field :score %>
  </div>
  
  <% end%>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
