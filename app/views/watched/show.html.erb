<p id="notice"><%= notice %></p>

<p>
  <strong>Watched Shows</strong>
</p>

<div class="my_series_stand">
	<%= link_to "View all the series that I'm watching", my_watching_series_path(@user), class: "all-series-link" %>
	<h2>Series that I'm Watching</h2>
		<div class="index_shows_panel">
		<% if @watching.any? %>
		    <% @watching.last(5).reverse.each do |show| %>


		        <div class="index_shows_item">
			           <%=link_to image_tag("#{show.poster}"), my_tracking_path(show) %>
			            <p><%= link_to "#{show.name}", my_tracking_path(show) %></p>

		        </div>

		      
		    <% end %>
		<% else %>
	    <p class="center-warning"><%= if is_himself?(@user); "Woah, you finish all your series, why not #{link_to 'browsing', serials_path }?".html_safe else "#{@user.username} isn't watching any series yet." end%></p>
	  	<% end %>
	</div>
</div>


<br>


<div class="my_series_stand">
	<%= link_to "View all my seen series", my_seen_series_path(@user), class: "all-series-link" %>
	<h2>Series Already Seen</h2>
		<div class="index_shows_panel">
		<% if @series.any? %>
		    <% @series.last(5).reverse.each do |show| %>


		        <div class="index_shows_item">
			           <%=link_to image_tag("#{show.poster}"), serial_path(show) %>
			            <p><%= link_to "#{show.name}", serial_path(show) %></p>

		        </div>

		      
		    <% end %>
		<% else %>
	    <p class="center-warning"><%= if is_himself?(@user); "Woah, you don't have any series added, why not #{link_to 'browsing', serials_path }?".html_safe else "#{@user.username} hasn't watched any series yet." end%></p>
	  	<% end %>
	</div>
</div>

<br>


<div class="my_movies_stand">
	<%= link_to "View all my seen movies", my_seen_movies_path(@user), class: "all-series-link" %>
	<h2>Movies Already Seen</h2>
		<div class="index_shows_panel">
		<% if @watched.movies.any? %>
		    <% @watched.movies.last(5).reverse.each do |show| %>


		        <div class="index_shows_item">

			            <%=link_to image_tag("#{show.poster}"), movie_path(show) %>
			            <p><%= link_to "#{show.name}", movie_path(show) %></p>

		        </div>

		      
		    <% end %>
		<% else %>
	    <p class="center-warning"><%= if is_himself?(@user); "Woah, you don't have any movies added, why not #{link_to 'browsing', movies_path }?".html_safe else "#{@user.username} hasn't added any movies yet." end%></p>
	  	<% end %>
	</div>
</div>
